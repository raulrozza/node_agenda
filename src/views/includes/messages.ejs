<% if (errors.length > 0) { %>
    <div class="row">
        <div class="col my-3">
            <% errors.forEach(error => { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
            <% }) %>
        </div>
    </div>
<% } %>

<% if (success && success.length > 0) { %>
    <div class="row">
        <div class="col my-3">
            <div class="alert alert-success">
                <%= success %>
            </div>
        </div>
    </div>
<% } %>
